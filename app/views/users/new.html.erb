<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New user</h1>
  <%= turbo_frame_tag "modal" do %>
    <%= tag.div data: {controller: "turbo-modal", action: "turbo:submit-end->turbo-modal#submitEnd"} do %>
      <div class="modal_wrapper">
        <div class="pop_up">
          <%= render "form", user: @user %>
          <%= button_tag "Cancel" , data: {action: "turbo-modal#hideModal"} , type: "button", class: "rounded-lg py-3 px-5 bg-red-600 text-white" %>
        </div>
      </div>
    <%end%>
  <%end%>
  <%= link_to 'Back to users', users_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
